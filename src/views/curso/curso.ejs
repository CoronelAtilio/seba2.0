<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs', {titulo: "Docente" , style: "style.css" , estilo: "datatables.css" ,
	sidebar: "sidebar.css" }) %>

	<body class="hidden">
		<!-- SIDEBAR -->
		<%- include('../partials/sidebar.ejs') %>
			<!-- CONTENT -->
			<section id="content">
				<!-- NAVBAR -->
				<%- include('../partials/header.ejs', {form_action: "/curso/buscar" , hidden: 'hidden' }) %>
					<!-- MAIN -->
					<main>
						<div class="head-title">
							<div class="left">
								<h1>
									<%= locals.userLogged.materias || '' %>
								</h1>

							</div>

							<span class="text">
								<div class="input-field">
									<form id="cursoForm" action="/docente" method="POST">
										<select name="idmateriacurso" class="btn-download" required id="cursoSelect">
											<option disabled selected>Selecciona Curso</option>
											<% for( let index=0; index < locals.userLogged.cursos.length; index++ ) { %>
												<option value="<%= locals.userLogged.cursos[index].idmateriacurso %>">
													<%= locals.userLogged.cursos[index].anio_curso %> 
													<%= locals.userLogged.cursos[index].division_curso %> 
													<%= locals.userLogged.cursos[index].turno %>
												</option>
											<% } %>
										</select>
										
									</form>
								</div>
							</span>

						</div>

						<div class="table-data">
							<div class="order">
								<form action="/ruta-de-post" method="POST">
									<table id="example" class="display" style="width:100%">
										<thead>
											<tr>
												<th>Apellido</th>
												<th>Nombre</th>
												<th>Celular</th>
												<th>Age</th>
												<th>Start date</th>
												<th>Salary</th>
											</tr>
										</thead>
										<tbody>
											<% for( let index=0; index < alumnos.length; index++ ) { %>
												<tr>
													<td>
														<%= alumnos[index].dataValues.apellido_alumno %>
													</td>
													<td>
														<%= alumnos[index].dataValues.nombre_alumno %>
													</td>
													<td>
														<%= alumnos[index].dataValues.celular_alumno %>
													</td>
													<td>61</td>
													<td>2011-04-25</td>
													<td>$320,800</td>
												</tr>

												<% } %>
										</tbody>
										<tfoot>
											<tr>
												<th>Name</th>
												<th>Position</th>
												<th>Office</th>
												<th>Age</th>
												<th>Start date</th>
												<th>Salary</th>
											</tr>
										</tfoot>
									</table>
									<button type="submit">Enviar</button>
								</form>
							</div>
						</div>
					</main>
			</section>
			<!-- Script de carga inicial -->
			<script src="/js/administrador_general/all_menues.js"></script>
			<!-- Script para mejorar la respuesta con "hide" -->
			<script src="/js/main_menues/bienvenida.js"></script>
			<!-- jQuery local -->
			<script src="/js/tablas/jquery-3.7.1.min.js"></script>
			<!-- Incluir DataTables local -->
			<script src="/js/tablas/datatables.js"></script>

			<!-- Inicializar DataTables -->
			<!--Detecta el cambio en el select y envía el formulario automáticamente-->

			<script src="/js/tablas/iniTable_detectSelect.js"></script>

	</body>

</html>