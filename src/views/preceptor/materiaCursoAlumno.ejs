<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs', {titulo: "Materia_curso_Docente" , style: "style.css" , estilo: "materiaCurso.css" ,
	sidebar: "sidebar.css" }) %>

	<body class="hidden">
		<!-- SIDEBAR -->
		<%- include('../partials/sidebar.ejs') %>
			<!-- CONTENT -->
			<section id="content">
				<!-- NAVBAR -->
				<%- include('../partials/header.ejs', {form_action: "#" , hidden: 'hidden' }) %>
					<!-- MAIN -->
					<main>
						<div class="head-title">
							<div class="left">
								<h1>Alumno & Curso</h1>
								<ul class="breadcrumb">
									<li>
										<a class="active" href="/preceptor/usuario">Designar</a>
									</li>
									<li><i class='bx bx-chevron-right'></i></li>
									<li>
										<a class="active" href="#">Alumno & Materia_Curso</a>
									</li>
								</ul>
							</div>
						</div>

						<form action="/preceptor/usuario/materiacursoalumno" method="POST">

							<div class="table-data">
								<div class="todo">
									<div class="head">
										<h3>Año // División // Turno</h3>
										<i class='bx bx-plus' ></i>
										<i class='bx bx-filter' ></i>
									</div>
									<ul class="todo-list">
										<% for(let index = 0; index < cursosFiltrados.length; index++) { %>
											<li class="not-completed">
												<p><%= cursosFiltrados[index].anio_curso %> // <%= cursosFiltrados[index].division_curso %> // <%= cursosFiltrados[index].nombre_turno %></p>
												<i class='bx bx-dots-vertical-rounded'>
													<input type="radio" name="cursos" value="<%=cursosFiltrados[index].idcurso%>">
												</i>
											</li>
										<% } %>
									</ul>
								</div>
								
								<div class="todo">
									<div class="head">
										<h3>Alumnos</h3>
										<i class='bx bx-plus' ></i>
										<i class='bx bx-filter' ></i>
									</div>
									<ul class="todo-list">
										<% for(let index = 0; index < alumnosFiltrados.length; index++) { %>
											<li class="not-completed">
												<p><%= alumnosFiltrados[index].apellido_alumno %>, <%= alumnosFiltrados[index].nombre_alumno %></p>
												<i class='bx bx-dots-vertical-rounded'>
													<input type="checkbox" name="alumnos" value="<%= alumnosFiltrados[index].idalumno %>">
												</i>
											</li>
										<% } %>
									</ul>
								</div>
							</div>
								<button type="submit">Asignar</button>
						</form>
					</main>
			</section>
			<!-- Script de carga inicial -->
			<script src="/js/administrador_general/all_menues.js"></script>
			<!-- Script para mejorar la respuesta con "hide" -->
			<!-- <script src="/js/main_menues/bienvenida.js"></script> -->
	</body>

</html>