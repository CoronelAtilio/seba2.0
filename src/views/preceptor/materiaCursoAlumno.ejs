<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs', {titulo: "Materia_curso_Docente" , style: "style.css" , estilo: "materiaCurso.css" ,
	sidebar: "sidebar.css" }) %>

	<body class="hidden">
		<!-- SIDEBAR -->
		<%- include('../partials/sidebar.ejs') %>
			<!-- CONTENT -->
			<section id="content">
				<!-- NAVBAR -->
				<%- include('../partials/header.ejs', {form_action: "#" , hidden: 'hidden' }) %>
					<!-- MAIN -->
					<main>
						<div class="head-title">
							<div class="left">
								<h1>Alumno & Materia_Curso</h1>
								<ul class="breadcrumb">
									<li>
										<a class="active" href="/preceptor/usuario">Designar</a>
									</li>
									<li><i class='bx bx-chevron-right'></i></li>
									<li>
										<a class="active" href="#">Alumno & Materia_Curso</a>
									</li>
								</ul>
							</div>
						</div>

						<form action="/preceptor/usuario/materiacursoalumno" method="POST">

								<div class="table-data">
									<div class="order">
										<div class="head">
											<h3>Materias & Cursos</h3>
											<i class='bx bx-search'></i>
											<i class='bx bx-filter'></i>
										</div>
										<table>
											<thead>
												<tr>
													<th>Materia</th>
													<th>Año y División</th>
													<th>Turno</th>
												</tr>
											</thead>
											<tbody>
												<% for( let index = 0; index < datosFiltrados.length; index++ ) { %>
													<tr>
														<td>
															<p><%= datosFiltrados[index].nombre_materia%></p>
														</td>
														<td><%= datosFiltrados[index].anio_curso%> <%= datosFiltrados[index].division_curso%></td>
														<td><span><%= datosFiltrados[index].turno_materiacurso%></span></td>
														<td><input type="checkbox" name="materiascursos"
															value="<%= datosFiltrados[index].idmateriacurso %>"></td>
													</tr>
												
												<% } %>
											</tbody>
										</table>
									</div>
									<div class="todo">
										<div class="head">
											<h3>Alumnos</h3>
											<i class='bx bx-search'></i>
											<i class='bx bx-filter'></i>
										</div>
										<ul class="todo-list">
											<% for( let index = 0; index < alumnosFiltrados.length; index++ ) { %>
												<li class="not-completed">
													<p>
														<%= alumnosFiltrados[index].apellido_alumno %>, <%= alumnosFiltrados[index].nombre_alumno %>
													</p>
													<i class='bx bx-dots-vertical-rounded'>
														<input type="checkbox" name="alumnos"
															value="<%= alumnosFiltrados[index].idalumno %>">
													</i>
												</li>
											
											<% } %>
										</ul>
									</div>
								</div>
								<button type="submit">Asignar</button>
						</form>
					</main>
			</section>
			<!-- Script de carga inicial -->
			<script src="/js/administrador_general/all_menues.js"></script>
			<!-- Script para mejorar la respuesta con "hide" -->
			<!-- <script src="/js/main_menues/bienvenida.js"></script> -->
	</body>

</html>