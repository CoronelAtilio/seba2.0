<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', {estilo : "acceso.css",style: "style.css"  , titulo : "Acceso", sidebar: "null"}) %>

<body>
    <main>
        <div class="login-container">
            <form action="/" method="POST">
                <div class="login-wrap">
                    <div class="login-html">
                        <!-- Pestañas de navegación -->
                        <input id="tab-1" type="radio" name="tab" class="sign-in" checked>
                        <label for="tab-1" class="tab">BIENVENIDO</label>

                        <!-- Contenido del formulario de Iniciar Sesión -->
                        <div class="login-form">
                            <div class="sign-in-htm">
                                <div class="group">
                                    <label for="login-user" class="label">Usuario</label>
                                    <input id="login-user" name="loginUser" type="text" class="input" value="<%= locals.old && old.loginUser ? old.loginUser : '' %>">
                                </div>
                                <!--comentario para los errores-->
                                <% if (locals.errors && locals.errors.loginUser) { %>
                                <div class="group">
                                    <%= locals.errors.loginUser.msg %>
                                </div>
                                <% } %>
                                <div class="group">
                                    <label for="login-pass" class="label">Contraseña</label>
                                    <input id="login-pass" name="loginPass" type="password" class="input" data-type="password">
                                    <% if (locals.errors && locals.errors.loginPass) { %>
                                    <div class="group">
                                        <%= locals.errors.loginPass.msg %>
                                    </div>
                                    <% } %>
                                </div>
                                <div class="group">
                                    <input id="check" name="rememberMe" type="checkbox" class="check" checked>
                                    <label for="check"><span class="icon"></span> Recordar Usuario</label>
                                </div>
                                <div class="group">
                                    <input type="submit" class="button" value="INICIAR SESIÓN">
                                </div>
                                <div class="hr"></div>
                                <div class="foot-lnk">
                                    <a href="#forgot">¿Has olvidado tu contraseña?</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </main>
</body>
</html>
